; This is the polybar config of Florian Koehler
; https://github.com/flokoe/dotfiles


; BAR

[bar/flokoeBar]
; Put the bar at the bottom of the screen
; if false bar is placed at the top
bottom = false

; Dimensions defined as pixel value or pecentage
width = 100%
height = 32

; Offset defined as pixel value
offset-x = 0
offset-y = 0

; Background argb color
background = #5a000000

; Foreground argb color
foreground = #eee

# Value used to draw round coreners
radius = 0

; Under-/overline pixel size
underline-size = 2
underline-color = #eee

; Space between elements (deprecated)
spacing = 1

; Space at the beginning/end of the bar
padding = 0

; Space before/after each module
module-margin = 0

; Fonts
font-0 = NotoSans-Regular:size=13:0
font-1 = FontAwesome:size=12:-2

; Defines the position of the modules
modules-left = i3 xwindow
modules-right = battery date powermenu

; Set locale (important for e.g. date and time)
locale = de_DE.UTF-8


; MODULES

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
pin-workspace = true


[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 4

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
interval = 2

[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = AC0

poll-interval = 5

format-charging = <animation-charging>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <ramp-capacity>  <label-full>
label-charging = %percentage%
label-discharging = %percentage%
label-full = %percentage%
format-charging-padding = 3
format-discharging-padding = 3
format-full-padding = 3

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1

; Defines date string
date = %A %d. %b

; Defines time format
time = %H:%M

; Defines order
label = %date% %time%

; Defines Icon before date and time
format =    <label>

[module/powermenu]
type = custom/menu

label-open = 
label-close = cancel
label-open-padding = 4 
label-close-padding = 3 
menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-0-padding = 3
menu-0-1-padding = 3

menu-1-0 = reboot?  
menu-1-0-exec = /sbin/reboot
menu-1-0-padding = 3

menu-2-0 = power off?  
menu-2-0-exec = /sbin/shutdown now
menu-2-0-padding = 3
