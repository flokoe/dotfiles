! This is the .Xresource of Florian KÃ¶hler
! https://github.com/flokoe/dotfiles
! Tested with rxvt-unicode (urxvt) v9.20


! opens urxvt with an specific size
urxvt.geometry: 119x36

! fades the text to the given percentage when focus is lost
urxvt.fading: 60

! fonts
urxvt.font: xft:Bitstream Vera Sans Mono:Roman:size=11
urxvt.boldFont: xft:Bitstream Vera Sans Mono:Bold:size=11

! disables old and ugly scrollbar
urxvt.scrollBar: false

! activates blinking cursor
urxvt.cursorBlink: true

! specifies which chars should work as a delimiter when double clicking selection
urxvt.cutchars: ":"

! own scrollback buffer for secondary screens like for example less
urxvt.secondaryScroll: false

urxvt.depth: 32

! activates all listed plugins
urxvt.perl-ext-common: vtwheel,resize-font

! keybindings for resize-font
urxvt.keysym.C-0:	resize-font:reset


